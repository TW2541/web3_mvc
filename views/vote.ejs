<!DOCTYPE html>
<html>
  <head>
	<title>Proposal Voting</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <script src="../dist/voteBundle.js" type="text/javascript"></script>
	<%- include('partial/nav')%>
	<h1>Proposal List</h1>
      <table class = 'table table-bordered'>
        <thead>
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Proposal</th>
            <th scope="col">Address</th>
          </tr>
        </thead>
        <tbody>
            <% var proposalCount = 0%>
        <%proposalLists.forEach(proposal => {%>
            <tr>
                <th scope="row"><%= proposalCount %></th>
                <td><%= proposal.title %></td>
                <td><%= proposal.contractaddress %></td>
                <td><a href="/vote/<%= proposal.contractaddress %>">Info</a></td>
            </tr>
            <% proposalCount += 1 %>
        <%})%>
        </tbody>
      </table><br><br>
    <h4 id = "msg"><%=msg%></h4>

  </body>
</html>